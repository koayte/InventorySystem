<Page x:Class="InventorySystem.Input"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InventorySystem"
      xmlns:y="clr-namespace:InventorySystem.SideBarNav"
      FocusManager.FocusedElement="{Binding ElementName=PartNum}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Input"
      Background="White">

    <Page.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="27"/>
            <Setter Property="Margin" Value="20,5,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Width" Value="200" />
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="20,15,0,0" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>

    </Page.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <!-- First row, Part Number -->
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Part Number"/>
                <TextBox x:Name="PartNum" Width="420" TextChanged="PartNum_TextChanged" TabIndex="0" KeyUp="Control_Enter"/>
            </StackPanel>
            
            <!-- Second Row -->
            <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                <!-- Quantity -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Quantity"/>
                    <TextBox x:Name="Qty" KeyUp="Control_Enter"/>
                </StackPanel>
                
                <!-- Batch ID -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Batch ID"/>
                    <TextBox x:Name="BatchID" KeyUp="Control_Enter" GotFocus="TextBox_GotFocus"/>
                </StackPanel>
                
            </StackPanel>

            <!-- Third row -->
            <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                <!-- Description -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Description" />
                    <TextBox x:Name="Description" KeyUp="Control_Enter" GotFocus="TextBox_GotFocus"/>
                </StackPanel>

                <!-- Location-->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Location" />
                    <ComboBox x:Name="Location" HorizontalAlignment="Left" Margin="20,5,0,0" Height="27" Width="200" FontSize="15" IsEditable="True" KeyUp="Control_Enter">
                        <ComboBoxItem VerticalAlignment="Center">Cabinet A</ComboBoxItem>
                        <ComboBoxItem VerticalAlignment="Center">Cabinet B</ComboBoxItem>
                        <ComboBoxItem VerticalAlignment="Center">Cabinet C</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>

            <!-- Fourth row -->
            <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                <!-- Model Number -->
                <StackPanel Orientation="Vertical">
                    <WrapPanel>
                        <TextBlock x:Name="ModelNumber" Text="Model Number" Foreground="Gray"/>
                        <CheckBox x:Name="ModelNumCheckbox" VerticalAlignment="Bottom" Margin="7,0,0,2" Checked="Model_CheckBox_Checked" Unchecked="Model_CheckBox_Unchecked" />
                    </WrapPanel>
                    <TextBox x:Name="ModelNum" IsReadOnly="True" KeyUp="Control_Enter"/>
                </StackPanel>

                <!-- Serial Number -->
                <StackPanel Orientation="Vertical">
                    <WrapPanel>
                        <TextBlock x:Name="SerialNumbers" Text="Serial Numbers" Foreground="Gray"/>
                        <CheckBox x:Name="SerialNumsCheckbox"  VerticalAlignment="Bottom" Margin="7,0,0,2" Checked="Serial_CheckBox_Checked" Unchecked="Serial_CheckBox_Unchecked"/>
                    </WrapPanel>
                    <TextBox x:Name="SerialNums" IsReadOnly="True" TextChanged="SerialNum_Entered"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
            <Button x:Name="addItem" Content="Add Item" Margin="20,0,0,20" FontSize="15" Height="27" Width="80" Click="addItem_Click"/>
            <Button x:Name="clearAll" Content="Clear" Margin="20,0,0,20" FontSize="15" Height="27" Width="60" Click="clearAll_Click"/>
        </StackPanel>
    </Grid>
</Page>
