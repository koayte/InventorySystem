<Page x:Class="InventorySystem.InputPages.Update"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InventorySystem.InputPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Update"
      Background="White">
    <Page.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="27"/>
            <Setter Property="Margin" Value="19,5,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Width" Value="202" />
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3" />
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="19,0,0,19"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="27"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>

            </Style.Resources>
        </Style>

        <Style x:Key="TextLabels" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="19,3,0,0" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>

        <Style x:Key="WarningLabels" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="19,3,0,0" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Height" Value="15"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="442"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0">
            <!-- First row, Part Number -->
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Part Number" Style="{StaticResource TextLabels}"/>
                <TextBox x:Name="PartNum" Width="423" TabIndex="0" KeyUp="Control_Enter"/>
                <TextBlock x:Name="PartNumWarning" Style="{StaticResource WarningLabels}" Width="{Binding ActualWidth, ElementName=PartNum}"/>
            </StackPanel>

            <!-- Second Row, Description-->
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Description" Style="{StaticResource TextLabels}"/>
                <TextBox x:Name="Description" Width="423" KeyUp="Control_Enter" GotFocus="TextBox_GotFocus"/>
                <TextBlock x:Name="DescriptionWarning" Style="{StaticResource WarningLabels}" Width="{Binding ActualWidth, ElementName=Description}"/>
            </StackPanel>

            <!-- Third Row -->
            <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                <!-- Quantity -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Quantity" Style="{StaticResource TextLabels}"/>
                    <TextBox x:Name="Qty" KeyUp="Control_Enter" TextChanged="Qty_CheckIfInt"/>
                    <TextBlock x:Name="QtyWarning" Style="{StaticResource WarningLabels}" Width="{Binding ActualWidth, ElementName=Qty}"/>
                </StackPanel>

                <!-- Batch ID -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Batch ID" Style="{StaticResource TextLabels}" Foreground="Gray"/>
                    <TextBox x:Name="BatchID" KeyUp="Control_Enter" GotFocus="TextBox_GotFocus" IsReadOnly="True"/>
                    <TextBlock x:Name="BatchIDWarning" Style="{StaticResource WarningLabels}" Width="{Binding ActualWidth, ElementName=BatchID}"/>
                </StackPanel>
            </StackPanel>

            <!-- Fourth row -->
            <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                <!-- Location-->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Location" Style="{StaticResource TextLabels}"/>
                    <ComboBox x:Name="Location"
                              HorizontalAlignment="Left"
                              VerticalContentAlignment="Center"
                              Margin="19,5,0,0"
                              Height="27" Width="202"
                              FontSize="15"
                              IsEditable="True"
                              KeyUp="Control_Enter"
                              DisplayMemberPath="Area">
                    </ComboBox>
                    <TextBlock x:Name="LocationWarning" Style="{StaticResource WarningLabels}" Width="{Binding ActualWidth, ElementName=Location}"/>
                </StackPanel>

                <!-- Model Number -->
                <StackPanel Orientation="Vertical">
                    <WrapPanel>
                        <TextBlock x:Name="ModelNumber" Text="Model Number" Foreground="Gray" Style="{StaticResource TextLabels}"/>
                        <CheckBox x:Name="ModelNumCheckbox" VerticalAlignment="Bottom" Margin="7,0,0,2" Checked="Model_CheckBox_Checked" Unchecked="Model_CheckBox_Unchecked" KeyUp="Control_Enter"/>
                    </WrapPanel>
                    <TextBox x:Name="ModelNum" IsReadOnly="True" KeyUp="Control_Enter"/>
                    <TextBlock x:Name="ModelNumWarning" Style="{StaticResource WarningLabels}" Width="{Binding ActualWidth, ElementName=ModelNum}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Serial Number -->
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <WrapPanel>
                <TextBlock x:Name="SerialNumbers" Text="Serial Numbers" Foreground="Gray" Style="{StaticResource TextLabels}"/>
                <CheckBox x:Name="SerialNumsCheckbox"  VerticalAlignment="Bottom" Margin="7,0,0,2" Checked="Serial_CheckBox_Checked" Unchecked="Serial_CheckBox_Unchecked"/>
            </WrapPanel>

            <TextBox x:Name="SerialNums" IsReadOnly="True" Height="252"
                     TextChanged="SerialNum_Entered"
                     VerticalScrollBarVisibility="Auto"
                     VerticalContentAlignment="Top"
                     AcceptsReturn="True"/>

            <TextBlock x:Name="SerialNumsWarning" Height="Auto"
                       Style="{StaticResource WarningLabels}"
                       Width="{Binding ActualWidth, ElementName=SerialNums}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
            <Button x:Name="UpdateItem" Content="Update" Width="80" Click="UpdateItem_Click"/>
        </StackPanel>
        <Frame x:Name="updateFrame" Grid.ColumnSpan="2"/>

    </Grid>



</Page>
