<Window x:Class="InventorySystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventorySystem"
        xmlns:y="clr-namespace:InventorySystem.SideBarNav"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Transparent"> <!-- AllowsTransparency="True", WindowStyle="None" -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListBox x:Name="sidebar" BorderThickness="0" Margin="0,0,0,0" Grid.Column="0" Background="#131b4f">
            <y:NavButton x:Name="input" Textlabel="Input" HorizontalAlignment="Left"/>
            <y:NavButton x:Name="output" Textlabel="Output" HorizontalAlignment="Left"/>
        </ListBox>

        <Frame Grid.Column="1" x:Name="navframe" Background="White" />

    </Grid>
    
    
</Window>
